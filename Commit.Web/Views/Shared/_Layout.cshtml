<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/kendo/2014.1.318/kendo")
    @Styles.Render("~/content/kendo/2014.1.318/kendo")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Commit! to Texas", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Click here for Demo", MVC.Home.Demo())</li>
                </ul>
                <input id="searchInput" placeholder="Search by School" class="form-control schoolSearchInput" />
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Commit!</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    $(document).ready(function () {
        var dataSource = new kendo.data.DataSource({
            pageSize: 10,
            serverPaging: true,
            serverFiltering: true,
            transport: {
                cache: false,
                read: {
                    type: "POST",
                    data: $("#searchInput").val(),
                    url: "/api/StaarRequest/ReadCampuses",
                    dataType: "json"
                }
            }
        });

        $("#searchInput").kendoAutoComplete({
            dataTextField: "Text",
            filter: "contains",
            minLength: 3,
            dataSource: dataSource
        });
    });
</script>